@model DbEscuela.Models.Tb_Alumno

@{
    ViewBag.Title = "Delete";
}
<h3>¿Estás seguro de eliminar este registro?</h3>
<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="col-sm-4">Nombre</dt>
        <dd class="col-sm-8">@Model.Nombres @Model.ApellidoPaterno @Model.ApellidoMaterno</dd>

        <dt class="col-sm-4">No. Control</dt>
        <dd class="col-sm-8">@Model.NoControl</dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
